{
  "name": "cdt-monorepo",
  "version": "1.0.0",
  "description": "加拿大驾考 App - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "type-check": "turbo run type-check",
    "mobile": "cd apps/mobile && pnpm dev",
    "admin": "cd apps/admin && pnpm dev",
    "db:generate": "cd apps/admin && pnpm db:generate",
    "db:studio": "cd apps/admin && pnpm db:studio",
    "db:init": "cd apps/admin && pnpm db:init",
    "db:init:migrate-only": "cd apps/admin && pnpm db:init:migrate-only",
    "db:seed": "cd apps/admin && pnpm db:seed",
    "db:check": "cd apps/admin && pnpm db:check",
    "db:reset": "cd apps/admin && pnpm db:reset"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
} 